RED=$(tput setaf 124)
CLR=$(tput sgr0)

FILE1=/home/runner/TempleOfOsiris/TombEntrance/Chamber1/Chamber2/Duamutef/stomachJar

FILE2=/home/runner/TempleOfOsiris/TombEntrance/Chamber1/Chamber2/Imetsy/liverJar

FILE3=/home/runner/TempleOfOsiris/TombEntrance/Chamber1/Chamber2/Hapi/lungsJar

FILE4=/home/runner/TempleOfOsiris/TombEntrance/Chamber1/Chamber2/Qebehsenuef/intestinesJar

if [[ -f "$FILE1" &&  -f "$FILE2" &&  -f "$FILE3"  &&  -f "$FILE4" ]]; then
    echo "The gods appreciate your efforts and grant you safe passage on."
    echo "The slab blocking your entrance to the third chamber began to rise, revealing an open doorway."
    mv .Chamber3 Chamber3
    
  
else
echo "You have not placed the jars to the correct gods. Be careful or you will be ${RED}punished${CLR}."
fi 